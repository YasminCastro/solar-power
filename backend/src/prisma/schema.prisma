// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int        @id @default(autoincrement())
  email     String     @unique
  password  String
  createdAt DateTime   @default(now())
  inversors Inversor[]
}

model Inversor {
  id             Int              @id @default(autoincrement())
  createdAt      DateTime         @default(now())
  user           User             @relation(fields: [userId], references: [id])
  userId         Int
  model          String
  hauwei         Hauwei?
  elgin          Elgin?
  powerGenerated PowerGenerated[]
}

model Hauwei {
  id         Int       @id @default(autoincrement())
  createdAt  DateTime  @default(now())
  url        String
  inversor   Inversor? @relation(fields: [inversorId], references: [id])
  inversorId Int       @unique
}

model Elgin {
  id         Int       @id @default(autoincrement())
  createdAt  DateTime  @default(now())
  username   String
  password   String
  inversor   Inversor? @relation(fields: [inversorId], references: [id])
  inversorId Int       @unique
}

model PowerGenerated {
  id               Int      @id @default(autoincrement())
  createdAt        DateTime @default(now())
  inversor         Inversor @relation(fields: [inversorId], references: [id])
  inversorId       Int
  powerInRealTime  Float?
  todayPerformance Float
  monthPerformace  Float
  yearPerformace   Float
  allPerformace    Float
  co2Value         Float?
  coalValue        Float?
  treeValue        Int?
}
