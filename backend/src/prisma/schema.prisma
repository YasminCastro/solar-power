// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int        @id @default(autoincrement())
  name      String
  email     String     @unique
  password  String
  createdAt DateTime   @default(now())
  inversors Inversor[]
  cep       String
  lat       String
  long      String
  city      String
  state     String
  country   String
}

model Inversor {
  id             Int              @id @default(autoincrement())
  createdAt      DateTime         @default(now())
  user           User             @relation(fields: [userId], references: [id])
  userId         Int
  model          String
  url            String?
  username       String?
  password       String?
  powerGenerated PowerGenerated[]
}

model PowerGenerated {
  id              Int      @id @default(autoincrement())
  createdAt       DateTime @default(now())
  inversor        Inversor @relation(fields: [inversorId], references: [id])
  inversorId      Int
  powerInRealTime Float?
  powerToday      Float
  powerMonth      Float
  powerYear       Float
  allPower        Float
  co2             Float?
  coal            Float?
  tree            Int?
  weather         Weather?
}

model Weather {
  id               Int            @id @default(autoincrement())
  createdAt        DateTime       @default(now())
  powerGenerated   PowerGenerated @relation(fields: [powerGeneratedId], references: [id])
  powerGeneratedId Int            @unique
  lat              String
  long             String
  localtime        String
  temp_c           Float
  wind_kph         Float
  pressure_mm      Float
  humidity         Float
  cloud            Float
  uv               Float
}
