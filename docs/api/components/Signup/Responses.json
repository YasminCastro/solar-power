{
  "201": {
    "description": "Cadastro bem-sucedido.",
    "content": {
      "application/json": {
        "schema": {
          "type": "object",
          "properties": {
            "token": {
              "type": "string",
              "description": "Token JWT gerado para autenticação do usuário."
            },
            "user": {
              "type": "object",
              "properties": {
                "_id": {
                  "type": "string",
                  "description": "ID único do usuário."
                },
                "name": {
                  "type": "string",
                  "description": "Nome do usuário."
                },
                "email": {
                  "type": "string",
                  "format": "email",
                  "description": "Email do usuário."
                }
              },
              "required": ["_id", "name", "email"]
            }
          },
          "required": ["token", "user"]
        }
      }
    }
  },
  "409": {
    "description": "Erro de conflito, como email já existente ou validação de campos falhada."
  },
  "400": {
    "description": "Requisição inválida. Este erro indica que a solicitação enviada pelo cliente contém dados incorretos ou malformados, impedindo o servidor de processá-la."
  }
}
